{% block choice_row %}
    <div class="ch-cookie-consent__category">
        <div class="ch-cookie-consent__category-toggle">
            {% for child in form %}
                {% if not child.rendered %}
                    {{- form_widget(child) -}}
                    {{- form_label(child, null, {translation_domain: choice_translation_domain}) -}}
                {% endif %}
            {% endfor %}
        </div>
        <div class="ch-cookie-consent__category-information">
            <h4 class="ch-cookie-consent__category-title">{{ ('ch_cookie_consent.'~name~'.title')|trans({}, 'CHCookieConsentBundle') }}</h4>
            <div class="ch-cookie-consent__category-description">

                <p>
                    {{ ('ch_cookie_consent.'~name~'.description')|trans({}, 'CHCookieConsentBundle') }}
                </p>

                <div class="ch-cookie-consent__category-description-details" id="{{ name }}CookieDetails">
                    <table>
                        <tr>
                            <th>Name</th>
                            <td>{{ ('ch_cookie_consent.'~name~'.title')|trans({}, 'CHCookieConsentBundle') }}</td>
                        </tr>
                        <tr>
                            <th>Provider</th>
                            <td>{{ ('ch_cookie_consent.'~name~'.details.provider')|trans({}, 'CHCookieConsentBundle') }}</td>
                        </tr>
                        <tr>
                            <th>Purpose</th>
                            <td>{{ ('ch_cookie_consent.'~name~'.details.purpose')|trans({}, 'CHCookieConsentBundle') }}</td>
                        </tr>
                        <tr>
                            <th>Privacy Policy</th>
                            <td>
                                <a href="{{ ('ch_cookie_consent.'~name~'.details.policy')|trans({}, 'CHCookieConsentBundle') }}" target="_blank" rel="nofollow noopener noreferrer">{{ ('ch_cookie_consent.'~name~'.details.policy')|trans({}, 'CHCookieConsentBundle') }}</a>
                            </td>
                        </tr>
                        <tr>
                            <th>Cookie Name</th>
                            <td>{{ ('ch_cookie_consent.'~name~'.details.name')|trans({}, 'CHCookieConsentBundle') }}</td>
                        </tr>
                        <tr>
                            <th>Cookie Expiry</th>
                            <td>{{ ('ch_cookie_consent.'~name~'.details.expiry')|trans({}, 'CHCookieConsentBundle') }}</td>
                        </tr>
                    </table>
                </div>

                <div class="ch-cookie-consent__toggle-cookie-information">
                    <a class="btn ch-cookie-consent__toggle-cookie-information-show" rel="{{ name }}CookieDetails">
                        {{ 'ch_cookie_consent.show_cookie_information'|trans({}, 'CHCookieConsentBundle') }}
                    </a>
                    <a class="btn ch-cookie-consent__toggle-cookie-information-hide" rel="{{ name }}CookieDetails">
                        {{ 'ch_cookie_consent.hide_cookie_information'|trans({}, 'CHCookieConsentBundle') }}
                    </a>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block submit_row %}
    <div class="ch-cookie-consent__btn-wrapper">
        {{ block('button_widget') }}
    </div>
{% endblock %}

